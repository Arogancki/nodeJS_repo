<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/background_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_settings"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:text="Settings" />

            <Button
                android:id="@+id/button_sign_out"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:text="Sign out"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_active_board"
            android:textColor="#ffffff"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:text="@string/go_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="TASKNAANA"
                    android:layout_marginBottom="20sp"
                    android:textColor="#ffffff"></TextView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:gravity="center">


            <Button
                android:id="@+id/button_inprogres"
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                tools:background="@drawable/inprogres" />

            <Button
                android:id="@+id/button_blocked"
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#ffffff"
                tools:background="@drawable/blocked" />

            <Button
                android:id="@+id/button_finished"
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#ffffff"
                tools:background="@drawable/finished" />

            <Button
                android:id="@+id/button_resumed"
                android:layout_width="34dp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_height="29dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#ffffff"
                tools:background="@drawable/resumed" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:layout_marginLeft="10sp"

                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#ffffff"
                tools:background="@drawable/delete" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="0.25"
                android:text="status" />

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="0.25"
                android:text="user"/>

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="0.25"
                android:text="comment"/>

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="0.25"
                android:text="time"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>



</LinearLayout>
