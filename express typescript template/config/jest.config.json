{
  "automock": false,
  "clearMocks": true,
  "collectCoverageFrom": [
    "src/**/*.{js|ts}",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "globals": {
    "ts-jest": {
      "tsConfigFile": "tsconfig.json"
    }
  },
  "resetModules": true,
  "rootDir": "../",
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/tests/**/*.ts?(x)",
    "<rootDir>/**/?(*.)(spec|test).ts?(x)"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
  },
  "verbose": false
}
